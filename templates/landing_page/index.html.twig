{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}NutriLife - Votre compagnon santé{% endblock %}

{% block body %}
    {# Hero Section #}
<section class="hero-section d-flex align-items-center text-white py-5">
    <div class="container">
        <div class="row align-items-center gy-5">
            <div class="col-lg-6">
                <h1 class="hero-text mb-4">
                    Votre chemin vers<br>
                    une vie plus saine
                </h1>

                <p class="hero-subtitle mb-5">
                    Une approche personnalisée pour votre bien-être, combinant nutrition intelligente et activité physique adaptée
                </p>

                <div class="d-flex gap-4">
                    <a href="{{ path('app_login') }}" class="btn btn-light btn-lg px-4 rounded-pill">
                        Commencer
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                    <button class="btn btn-outline-light btn-lg px-4 rounded-pill">
                        En savoir plus
                    </button>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="hero-images">
                    <img src="{{ asset('images/healthy-lifestyle.png') }}" 
                         alt="Mode de vie sain" 
                         class="hero-main-image">
                    
                    <div class="floating-card card-1 me-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                <i class="bi bi-heart-pulse text-success fs-4"></i>
                            </div>
                            <div class="text-dark">
                                <h4 class="h6 mb-1">Suivi personnalisé</h4>
                                <p class="small mb-0">Nutrition & Activité</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    {# Features Section #}
    <section class="py-5">
        <div class="container">
            <h2 class="text-center h1 mb-5">Votre voyage vers l'équilibre</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card p-4 h-100">
                        <div class="organic-shape p-3 d-inline-block mb-4" style="background: var(--soft-mint)">
                            <i class="bi bi-heart-pulse fs-2"></i>
                        </div>
                        <h3 class="h4 mb-3">Suivi Intelligent</h3>
                        <p>Analysez vos besoins nutritionnels avec précision :</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Calories</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Vitamines</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Minéraux</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Hydratation</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-4 h-100">
                        <div class="organic-shape p-3 d-inline-block mb-4" style="background: var(--fresh-peach)">
                            <i class="bi bi-book fs-2"></i>
                        </div>
                        <h3 class="h4 mb-3">Inspiration Santé</h3>
                        <p>Explorez notre univers bien-être :</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Recettes healthy</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Conseils nutrition</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Exercices adaptés</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Méditation guidée</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-4 h-100">
                        <div class="organic-shape p-3 d-inline-block mb-4" style="background: var(--calm-blue)">
                            <i class="bi bi-graph-up fs-2"></i>
                        </div>
                        <h3 class="h4 mb-3">Progression Zen</h3>
                        <p>Suivez vos progrès sereinement :</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Objectifs personnalisés</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Statistiques visuelles</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Rappels bienveillants</li>
                            <li><i class="bi bi-check2-circle text-success me-2"></i>Communauté motivante</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Benefits Section #}
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <img src="{{ asset('images/meditation.jpg') }}" class="img-fluid organic-shape floating-element" alt="Wellness">
                </div>
                <div class="col-lg-6">
                    <h2 class="h1 mb-4">Prenez soin de vous naturellement</h2>
                    <div class="benefits-card p-4 mb-3">
                        <h3 class="h5"><i class="bi bi-flower1 text-success me-2"></i>Équilibre Nutritionnel</h3>
                        <p>Découvrez des menus équilibrés et savoureux adaptés à vos besoins</p>
                    </div>
                    <div class="benefits-card p-4 mb-3">
                        <h3 class="h5"><i class="bi bi-droplet-fill text-primary me-2"></i>Hydratation Optimale</h3>
                        <p>Suivez votre consommation d'eau et d'électrolytes</p>
                    </div>
                    <div class="benefits-card p-4">
                        <h3 class="h5"><i class="bi bi-heart-fill text-danger me-2"></i>Bien-être Mental</h3>
                        <p>Accédez à des exercices de méditation et de respiration</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Call to Action #}
    <section class="py-5" style="background: var(--sage-green)">
        <div class="container text-center text-white">
            <h2 class="display-4 mb-4">Commencez votre transformation</h2>
            <p class="lead mb-4">Rejoignez notre communauté de personnes engagées dans leur bien-être</p>
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg rounded-pill px-5 py-3">
                Créer mon compte gratuitement
                <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </section>
{% endblock %}